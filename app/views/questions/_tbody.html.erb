<% questions.each do |question| %>
  <tr class='question__tr'>
    <td class='question__td'><%= question.tag.name %></td>
    <td class='question__td'><%= question.answer_count %></td>
    <td class='question__td'><%= question.body %></td>
    <td class='question__td'>
      <%= text_field_tag 'body', nil, class:'question__answer-field' %>
    </td>
    <td class='question__td--btn'>
      <%= link_to answers_path, method: :post, class: 'question__link', remote: true do %>
        <i class="far fa-save"></i>
      <% end %>
    </td>
  </tr>
<% end %>