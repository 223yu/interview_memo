<div class='errors'>
  <%= render 'layouts/errors', obj: @user %>
</div>
<div class='devise'>
  <h4 class='devise__title'>新規登録</h4>
  <%= form_with model: @user, url: user_registration_path, id:'new_user', class:'devise__form-group' ,local: true do |f| %>

    <div class='devise__form-row'>
      <%= f.label :name, '名前', class:'devise__form-row-label' %>
      <%= f.text_field :name, autofocus: true, class:'devise__form-row-field' %>
    </div>

    <div class='devise__form-row'>
      <%= f.label :email, 'メールアドレス', class:'devise__form-row-label' %>
      <%= f.email_field :email, autocomplete: "email", class:'devise__form-row-field' %>
    </div>

    <div class='devise__form-row'>
      <%= f.label :password, 'パスワード', class:'devise__form-row-label' %>
      <%= f.password_field :password, autocomplete: 'new-password', class:'devise__form-row-field' %>
    </div>

    <div class='devise__form-row'>
      <%= f.label :password_confirmation, 'パスワード（確認）', class:'devise__form-row-label' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class:'devise__form-row-field' %>
    </div>

    <div class='devise__form-row'>
      <%= f.submit '新規登録', class:'devise__form-row-btn' %>
    </div>
  <% end %>
</div>
